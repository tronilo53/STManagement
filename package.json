{
  "name": "STManagement",
  "version": "1.0.0",
  "main": "main.mjs",
  "type": "module",
  "license": "MIT",
  "description": "STManagement Aplicación para la gestión de Stock",
  "author": "Luis TM - STManagement",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod && electron-builder --publish always",
    "electron": "electron ."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/router": "^17.1.0",
    "animate.css": "^4.1.1",
    "bootstrap": "^5.3.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1",
    "jquery": "^3.7.1",
    "material-symbols": "^0.21.2",
    "popper.js": "^1.16.1",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.12.3",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.2",
    "@angular/cli": "^17.1.2",
    "@angular/compiler-cli": "^17.1.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.3.2"
  },
  "build": {
    "appId": "com.es.rivendel",
    "productName": "STManagement",
    "copyright": "Luis Tronilo dev STManagement.",
    "files": [
      "**/*",
      "dist/**/*",
      "build/**/*"
    ],
    "directories": {
      "output": "dist_electron",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "asar": false,
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "removeDefaultUninstallWelcomePage": false,
      "installerIcon": "build/installerIcon.ico",
      "uninstallerIcon": "build/uninstallerIcon.ico",
      "installerHeaderIcon": "build/installerHeaderIcon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": false,
      "shortcutName": "STManagement",
      "runAfterFinish": false,
      "include": "build/customInstaller.nsh"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "background": "build/background.png",
      "iconSize": 80,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
